#include "libft.h"
#include "ft_ls.h"

int			ft_init_flags(t_flags **flags, int ac, char **av)
{
	int	n;

	n = 0;
	if ((*flags = malloc(sizeof(t_flags))) == NULL)
		return (ERROR);
	(*flags)->l = FALSE;
	(*flags)->R = FALSE;
	(*flags)->a = FALSE;
	(*flags)->r = FALSE;
	(*flags)->t = FALSE;
	if (av)
		while (++n < ac)
			;
	return (OK);
}
